{{#if entry.isAuthor}}
  <div class="alert alert-info">
    <strong>Info!</strong> You're the author!
  </div>
{{else}}
  <div class="alert alert-warning">
    <strong>Info!</strong> NOT the author! Someone must have shared this with you.
  </div>
{{/if}}

{{#if entry.entry.coverImage}}
  <div class="row">
    <div class="col-lg-12">
      <img src={{entry.entry.coverImage.getSrc}} class="img-responsive">
    </div>
  </div>
{{/if}}

<div class="row">
  <div class="col-lg-12">
    <h1 id="title"><span class="label label-success">
      {{moment-calendar entry.entry.creationDate}}</span> {{entry.entry.title}}
      {{#if entry.entry.public}}<small><span class="label label-warning">public</span></small>{{/if}}
    </h1>
    <p>{{expandLineBreaks entry.entry.memo}}</p>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <p>Tags:
      {{#each entry.tagList as |tag|}}
        <span class="label label-danger"><span class="glyphicon glyphicon-tag"></span> {{tag}}</span>
      {{/each}}
      {{#if entry.entry.location}}
        <span class="label label-warning"><span class="glyphicon glyphicon-map-marker"></span>{{entry.entry.location}}</span>
      {{/if}}
    	| <span class="glyphicon glyphicon-user"></span> {{#link-to "users.show" entry.entry.user}}{{entry.entry.user.name}}{{/link-to}}
    	| <span class="glyphicon glyphicon-time"></span> {{moment-format entry.entry.updated}}
      {{#if entry.isAuthor}}
      | <span class="glyphicon glyphicon-share"></span> {{#link-to "journal.show.shares"}}Shares{{/link-to}}
      {{/if}}
      | {{#link-to "journal.show.edit" entry}}edit{{/link-to}}
    </p>
  </div>
</div>

{{#if entry.entry.images}}
  <div class="row">
    {{#each entry.entry.images as |image|}}
      <div class="col-xs-3 text-center">
        <img class="img-thumbnail" alt="140x140" src={{image.thumb}} style="width: 140px; height: 140px;">
      </div>
    {{/each}}
  </div>
{{/if}}
