{{#if title}}
  <h1 id="title">{{title}}</h1>
{{/if}}
{{#if description}}
  <p>{{description}}</p>
{{/if}}

{{#if errorMessage}}
  <div class="alert alert-danger">
    {{errorMessage}}
  </div>
{{/if}}
<form class="form-horizontal" {{action "save" on="submit"}}>

