  <div class="form-group">
    <label for="input-creation-date" class="col-sm-2 control-label">Date</label>
    <div class="col-sm-10">
       {{input value=edit.creationDate class="form-control" id="input-creation-date" placeholder="Date"}}
    </div>
  </div>
  <div class="form-group">
    <label for="input-title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input value=edit.title placeholder="" class="form-control" id="input-title"}}
    </div>
  </div>
  <div class="form-group">
    <label for="input-memo" class="col-sm-2 control-label">Memo</label>
    <div class="col-sm-10">
      {{textarea value=edit.memo placeholder="Write down things that made you smile, your thoughts, ideas, inspirations." class="form-control" id="input-memo"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          {{input type="checkbox" checked=edit.public}} Public
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      {{#if model}}
        <button type="submit" class="btn btn-success">Save</button>
      {{else}}
        <button type="submit" class="btn btn-success">Create</button>
      {{/if}}
      {{#if model}}
        <button class="btn btn-danger" {{action "delete"}}>Delete</button>
      {{/if}}
      <a class="btn btn-link" {{action "cancel"}}>Cancel</a>
    </div>
  </div>
</form>
