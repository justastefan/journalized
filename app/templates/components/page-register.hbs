
    <h1>Register</h1>
    <p style="margin-bottom: 25px">Type name, e-mail and a password to login</p>

    {{#if errorMessage}}
      <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        {{errorMessage}}
      </div>
    {{/if}}

    <form id="loginform" class="form-horizontal" role="form" {{action 'register' on='submit'}}>

      <div style="margin-bottom: 25px" class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        {{input
          value=name
          id="register-name"
          type="text"
          class="form-control"
          name="name"
          placeholder='Name'}}{{#if   isValidName}}yes!{{else}}nooo{{/if}}
      </div>

      <div style="margin-bottom: 25px" class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
        {{input
          value=email
          id="register-email"
          type="text"
          class="form-control"
          name="email"
          placeholder='eMail'}}{{#if   isValidEMail}}yes!{{else}}nooo{{/if}}
      </div>

      <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          {{input
            value=password
            placeholder="Password"
            id="register-password"
            class="form-control"
            name="password"
            type='password'}}{{#if   isValidPassword}}yes!{{else}}nooo{{/if}}
      </div>

      <div style="margin-top:15px" class="form-group">
        <!-- Button -->

        <div class="col-sm-12 controls">
          {{#if   isValid}}yes!{{else}}nooo{{/if}}
          <button id="btn-login" type="submit" class="btn btn-success" disabled={{isInvalid}}>Register</button>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12 control">
          <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
              Already registered: {{#link-to 'login'}}Login here{{/link-to}}.
          </div>
        </div>
      </div>
    </form>
