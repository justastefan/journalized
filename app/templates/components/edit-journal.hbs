{{#if title}}
  <h1 id="title">{{title}}</h1>
{{/if}}
{{#if description}}
  <p>{{description}}</p>
{{/if}}

{{#if errorMessage}}
  <div class="alert alert-danger">
    {{errorMessage}}
  </div>
{{/if}}
<form class="form-horizontal" {{action "doSave" on="submit"}}>
  <div class="form-group">
    <label for="input-title" class="col-lg-2 control-label">Title</label>
    <div class="col-lg-10">
        {{input
          value=editJournal.name
          placeholder=""
          class="form-control"
          id="input-title"
          placeholder="(Optional) Enter a short summary"
        }}
    </div>
  </div>
  <div class="form-group">
    <label for="input-memo" class="col-lg-2 control-label">Memo</label>
    <div class="col-lg-10">
        {{textarea
          value=editJournal.description
          placeholder="Write down things that made you smile, your thoughts, ideas, inspirations."
          rows="7"
          class="form-control"
          id="input-description"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <div class="checkbox">
        <label>
          {{input type="checkbox" checked=editJournal.status}} Public
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      {{#if model}}
          <button type="submit" class="btn btn-success">Save</button>
      {{else}}
        <button type="submit" class="btn btn-success">Create</button>
      {{/if}}
      <a class="btn btn-link" {{action "cancel"}}>Cancel</a>
    </div>
  </div>
</form>
